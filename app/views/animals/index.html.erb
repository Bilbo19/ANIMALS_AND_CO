<h1>Animals</h1>


  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Age</th>
      <th>Category</th>
    </tr>
  </thead>

  <tbody>
    <% @animals.each do |animal| %>
      <tr>
        <td><%= animal.name %></td>
        <td><%= animal.description %></td>
        <td><%= animal.age %></td>
        <td><%= animal.category %></td>
        <td><%= link_to 'Show', animal %></td>
        <td><%= link_to 'New', new_animal_path(animal) %></td>
        <td><%= link_to 'Destroy', animal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>

<br>
