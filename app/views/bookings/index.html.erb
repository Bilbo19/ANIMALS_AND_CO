<h1 class="title">Your bookings</h1>
<div class="cards">
  <% @bookings.each do |booking| %>
      <div class="card-animal">
        <div class="card-animal-infos">
          <div>
            <h2><%= link_to booking.animal.name, booking_path(booking) %></h2>
            <p>Arrival: <%= booking.start_date %></p>
            <p>Departure: <%= booking.end_date %></p>
            <% if policy(booking).destroy? %>
              <%= link_to "CANCEL BOOKING", booking_path(booking),
                method: :delete,
                data: { confirm: "Are you sure?" } %>
            <% end %>
      </div>
  <% end %>
</div>
